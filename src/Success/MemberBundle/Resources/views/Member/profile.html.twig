{% extends "SuccessSiteBundle::basic_layout.html.twig" %}

{% block title %}Личный кабинет{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-md-12 no-padding no-margin well jumbotron">
                <h2>{{ memberName(member) }}</h2>
                <h3>Мой статус</h3>
                <h4>баланс: ${{ balance }}</h4>
                
                    <a class="btn btn-info" href="#">пополнить счет</a>
                    <a class="btn btn-info" href="#">мои оплаты</a>
                    <h4>текущий тариф:
                    {% set pricingProduct = memberOwnedProduct(member) %}
                        <span class="{{ pricingProduct == null ? "label label-danger" : "label label-success" }}">
                            {{ pricingProduct == null ? "тариф не назначен" : pricingProduct }}
                        </span>
                    </h4>                    
                    <h4>сменить тариф</h4>
                    <a class="btn btn-success" href="#">базовый</a>
                    <a class="btn btn-success" href="#">стандарт</a>
                    <a class="btn btn-success" href="#">VIP</a>
            </div>
            <div class="col-md-12 no-padding no-margin well jumbotron">
                <h3>Моя команда</h3>
                <table class="table table-hover table-responsive" >
                    <tr>
                        <th>Партнер</th>
                        <th>Количество рефералов</th>
                    </tr>
                    {% for referal in referals %}
                        {% include 'SuccessMemberBundle:Member:partial/referal_table_row.html.twig' %}
                    {% endfor %}
                </table>
            </div>    
        </div>
    </div>    
{% endblock %}