{% block modal %}
    
        <div class="modal-dialog">
            <div class="modal-content">
{#                <div class="modal-header">
                    
                </div>    #}
                <div class="modal-body" style="max-height:550px; overflow: auto;">
                    <h3>Ваши рефералы (уровень: {{ level }})</h3>
                    <table class="table table-hover table-responsive table-striped" >
                        <tr>
                            <th>Имя</th>
                            <th>Рефералов</th>
                            <th>Оплаченных</th>
                        </tr>
                    {% for referal in referals %}
                        <tr>
                            <td>{{ memberName(referal) }} ({{ referal.externalId }})</td>
                            <td>{{ referalsCount(referal) }}</td>
                            <td>{{ referalsHasProductCount(referal) }}</td>
                        </tr>
                    {% endfor %}
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" data-dismiss="modal" aria-hidden="true">Закрыть</button>
                </div>
            </div>
        </div>    
{% endblock %}