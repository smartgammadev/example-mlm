{% block modal %}
    
        <div class="modal-dialog">
            <div class="modal-content">
{#                <div class="modal-header">
                    
                </div>    #}
                <div class="modal-body" style="max-height:550px; overflow: auto;">
                    <h3>Ваши рефералы (уровень: {{ level }})</h3>
                    <div class="table-responsive">
                        <table class="table table-hover table-responsive table-striped" >
                            <thead>
                                <tr>
                                    <th>Имя</th>
                                    <th>Рефералов</th>
                                    <th>Оплаченных</th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                        {% for referal in referals %}
                            <tr>
                                <td>{{ memberName(referal) }} ({{ referal.externalId }})</td>
                                <td>{{ referalsCount(referal) }}</td>
                                <td>{{ referalsHasProductCount(referal) }}</td>
                            </tr>
                        {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if referals|length > 10 %}
                        <div class="col-md-12 text-center">
                            <ul class="pagination" id="myPager" style="margin:0px;"></ul>
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" data-dismiss="modal" aria-hidden="true">Закрыть</button>
                </div>
            </div>
        </div>    
{% endblock %}
    <script>
        $(document).ready(function(){
            $('#myTable').pageMe({pagerSelector:'#myPager',showPrevNext:true,hidePageNumbers:false,perPage:10});
            })
    </script>