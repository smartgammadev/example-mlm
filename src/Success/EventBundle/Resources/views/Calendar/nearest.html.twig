{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/successevent/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/successevent/css/4success.style.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}" />


{% endblock %}

{% block title %}Nearest Events Calendar{% endblock %}


{% block body %}
    <div class="page-head">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Календарь мероприятий</h2>
                </div>    
            </div>
        </div>
    </div>        
    
    <div class="content">
        <div class="container">
            <div class="row">            
                <div class="col-md-6">
                    <h4>Мероприятия сегодня ({{(eventsOfDay|length)}})</h4>
                    {% for event in eventsOfDay %}
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                {{ event.name }}
                            </div>
                            <div class="panel-body">
                                {% media event.media, 'small' %}
                                {{ event.startDateTime|date('d.m.Y H:i') }}
                                <a class="btn btn-success">Записаться</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                    
                <div class="col-md-6">
                    <h4>Мероприятия недели ({{(eventsOfWeek|length)}})</h4>
                    {% for event in eventsOfWeek %}
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                {{ event.name }}
                            </div>
                            <div class="panel-body">
                                {% media event.media, 'small' %}
                                {{ event.startDateTime|date('d.m.Y H:i') }}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>    
        
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/successevent/js/jquery-1.11.1.min.js') }}"></script>    
    <script type="text/javascript" src="{{ asset('bundles/successevent/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/successevent/js/jquery.countdown.js') }}"></script>
{% endblock %}


